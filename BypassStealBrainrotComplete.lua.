-- Auto Steal Nearest Expensive Brainrot with G Hotkey
   local Players = game:GetService("Players")
   local LocalPlayer = Players.LocalPlayer
   local Workspace = game:GetService("Workspace")
   local UserInputService = game:GetService("UserInputService")

   local HOTKEY = Enum.KeyCode.G

   local function findMostExpensiveBrainrot()
       local highestValue, targetModel = 0, nil
       print("Buscando brainrot mais caro...")
       
       for _, obj in pairs(Workspace:GetDescendants()) do
           if obj:IsA("Model") then
               local value = obj:FindFirstChild("Value") and obj:FindFirstChild("Value").Value or 0
               if typeof(value) == "number" and value > highestValue then
                   highestValue = value
                   targetModel = obj
                   print("Encontrado:", obj.Name, "M/S:", value)
               end
           end
       end
       
       if targetModel then
           print("Brainrot mais caro:", targetModel.Name, "M/S:", highestValue)
       else
           print("Nenhum brainrot encontrado!")
       end
       return targetModel
   end

   local function stealBrainrot(model)
       if not model then return end
       local prompt = model:FindFirstChildWhichIsA("ProximityPrompt")
       if prompt then
           print("Tentando roubo via ProximityPrompt")
           prompt:FireProximityPrompt()
       else
           print("ProximityPrompt n√£o encontrado, tentando evento...")
           local event = model:FindFirstChild("Steal")
           if event and event:IsA("RemoteEvent") then
               event:FireServer()
           end
       end
   end

   UserInputService.InputBegan:Connect(function(input)
       if input.KeyCode == HOTKEY then
           print("G pressionada!")
           local target = findMostExpensiveBrainrot()
           stealBrainrot(target)
       end
   end)

   print("Script carregado! Pressione G para roubar.")
